$bg-color = white
$text-color = rgba(0,0,0,0.87)
$text-color-fallback = black

body, html, .hero-block
  height: 100vh
  width: 100vw
  background: $bg-color

.mdl-layout
  color: $text-color-fallback
  color: $text-color
.mdl-layout__header--transparent
  background: rgb(0, 0, 0)
  background: rgba(255, 0, 0, 0)

.hero-block
  max-width: 90em
  padding: 1em
.hero-img, .hero-thumb
  border-radius: 0.25em
.hero-img
  max-width: 100vw
.hero-name
  //mix-blend-mode: difference
  position: relative
  left: -20%
  text-align: center
  text-shadow: 0.05em 0.05em 25px white, 0.05em 0.05em 25px white, 0.05em 0.05em 25px white
.hero-intro
  font-size: 110%
.hero-what
  font-size: 140%
@media screen and (min-width: 600px)
  .hero-img
    margin: 3vw
    margin-bottom: 1em
    float: left
    max-width: 50vw
  .explore-list__item
    display: inline-block


.save-spaces
  white-space: pre-wrap
