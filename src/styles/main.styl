$global-bg-color = #3e3c3c
$bg-color = #464343
$text-color = silver
$text-color-fallback = silver

body, html, .hero-block
  height: 100vh
  width: 100vw
  background: $global-bg-color

.mdl-layout
  color: $text-color-fallback
  color: $text-color
.mdl-layout__header--transparent
  background: rgb(0, 0, 0)
  background: rgba(255, 0, 0, 0)

.hero-cell-link
  display: inline-block
  position: relative
.hero-cell-title
  background: linear-gradient(to bottom, rgba(0,0,0,0) 40%, rgba(20,20,20,0.8) 100%)
  display: block
  margin: 0
  position: absolute
  bottom: 0
  padding: 3em 5% 0.6em
  width: 90%
.hero-thumb
  max-width: 100%

.hero-card
  background: $bg-color
  margin: 0 auto
  width: auto
  max-width: 60em
.hero-card *
  z-index: 10
.hero-card-title
  height: 13em
  overflow: hidden
  padding: 0
  position: relative
  text-shadow: 0.05em 0.05em 25px white, 0.05em 0.05em 25px white, 0.05em 0.05em 25px white
.hero-img, .hero-thumb
  border-radius: 0.25em
.hero-img
  position: absolute
  top: -10%
  max-width: 100%
.hero-name, .hero-intro
  padding: 1.2em
